Algoritmo Arreglo_Promedio
	
	definir suma, i Como Real
	suma <- 0
	prom <- 0
	
	dimension lista[7]
	
	lista[0] <- 5
	lista[1] <- 5
	lista[2] <- 4.5
	lista[3] <- 3.0
	lista[4] <- 2.5
	lista[5] <- 2.7
	
	para i <- 1 hasta 6 Con Paso 1 Hacer
		suma <- (suma + lista[i])
		prom <- suma / 6
	FinPara
	
	mostrar "La suma es:", suma
	mostrar "su promedio es: ", prom
	
FinAlgoritmo
